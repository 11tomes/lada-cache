{
    "name": "spiritix/lada-cache",
    "type": "library",
    "description": "A Redis based, automated and scalable database caching layer for Laravel 5+",
    "license": "MIT",
    "keywords": ["php","laravel","cache","caching","redis"],
    "authors": [
        {
            "name": "Matthias Isler",
            "email": "mi@matthias-isler.ch"
        }
    ],
    "require": {
        "php": ">=5.6",
        "illuminate/support": "~5.1",
        "illuminate/database": "~5.1",
        "illuminate/redis": "~5.1",
        "predis/predis": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0",
        "codeclimate/php-test-reporter": "dev-master"
    },
    "suggest": {
        "ext-phpiredis": "Allows faster serialization and deserialization of the Redis protocol"
    },
    "autoload": {
        "psr-4": {
            "Spiritix\\LadaCache\\": "src/Spiritix/LadaCache/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spiritix\\LadaCache\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable"
}